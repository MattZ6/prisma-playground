generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id                String   @id @default(uuid())
  name              String   @unique
  description       String?
  duration_in_hours Int
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@map("courses")
}

model Module {
  id                String   @id @default(uuid())
  name              String   @unique
  description       String?
  duration_in_hours Int
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@map("modules")
}
